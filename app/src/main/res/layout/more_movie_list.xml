<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/grey_700"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/iv_movie_poster_more_details"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/grey_500"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_movie_title_more_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="Squid Game" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_movie_release_date_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/not_white"
            android:textSize="12sp"
            tools:text="2021-09-09" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/not_white"
            android:paddingStart="8dp"
            android:text="â€¢" />

        <TextView
            android:id="@+id/tv_movie_rating_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/not_white"
            android:textSize="12sp"
            tools:text="8.5" />
    </LinearLayout>


</LinearLayout>
